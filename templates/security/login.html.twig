<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Admin Login{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('css/default.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body class="base">
{% block body %}
    <header className="logo-header">
        <img src={{ 'assets/logo/final_logo.png'}} class="logo"/>
        <h1>Login Admin Dashboard</h1>
    </header>
    <main >
        <div class="login">
        <form action="{{ path('security_login') }}" method="post" class="login-form">
            <div>
                <div class="form-group">
                    <label class="form-control-label required" for="username">Username</label>
                    <input type="text" id="username" name="_username" required="required" class="form-control">
                </div>
                <div class="form-group">
                    <label class="form-control-label required" for="password">Password</label>
                    <input type="password" id="password" name="_password" required="required" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" id="Login" name="Login" class="btn-secondary btn">Login</button>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}">
            </div>
        </form>
        </div>
        <div>
            <p>Not supposed to be here? Looking for the Launch login page?</p>
            <h2><a href="http://jg-launch.surge.sh/">Click Here!</a></h2>
        </div>
    </main>
{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>